{
  "name": "STextarea",
  "type": "registry:ui",
  "dependencies": ["stng-react"],
  "files": ["components/stextarea/component.tsx"],
  "tailwind": {
    "config": {
      "theme": {
        "extend": {}
      }
    }
  },
  "cssVars": {},
  "meta": {
    "importName": "STextarea",
    "exportName": "default"
  },
  "props": {
    "value": {
      "type": "string",
      "required": false,
      "description": "The textarea value"
    },
    "placeholder": {
      "type": "string",
      "required": false,
      "description": "Placeholder text"
    },
    "rows": {
      "type": "number",
      "default": 4,
      "required": false,
      "description": "Number of visible text lines"
    },
    "cols": {
      "type": "number",
      "required": false,
      "description": "Number of visible character columns"
    },
    "size": {
      "type": "string",
      "enum": ["small", "medium", "large"],
      "default": "medium",
      "required": false,
      "description": "Size of the textarea"
    },
    "variant": {
      "type": "string",
      "enum": ["default", "outlined", "filled"],
      "default": "default",
      "required": false,
      "description": "Visual variant of the textarea"
    },
    "disabled": {
      "type": "boolean",
      "default": false,
      "required": false,
      "description": "Whether the textarea is disabled"
    },
    "error": {
      "type": "boolean",
      "default": false,
      "required": false,
      "description": "Whether the textarea is in error state"
    },
    "helperText": {
      "type": "string",
      "required": false,
      "description": "Helper text displayed below the textarea"
    },
    "label": {
      "type": "string",
      "required": false,
      "description": "Label text for the textarea"
    },
    "required": {
      "type": "boolean",
      "default": false,
      "required": false,
      "description": "Whether the textarea is required"
    },
    "resize": {
      "type": "string",
      "enum": ["none", "vertical", "horizontal", "both"],
      "default": "vertical",
      "required": false,
      "description": "Resize behavior of the textarea"
    },
    "className": {
      "type": "string",
      "required": false,
      "description": "Additional CSS classes"
    },
    "onChange": {
      "type": "function",
      "required": false,
      "description": "Change handler function"
    },
    "onFocus": {
      "type": "function",
      "required": false,
      "description": "Focus handler function"
    },
    "onBlur": {
      "type": "function",
      "required": false,
      "description": "Blur handler function"
    }
  }
}

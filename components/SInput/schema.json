{
  "name": "SInput",
  "type": "registry:ui",
  "dependencies": ["stng-react"],
  "files": ["components/sinput/component.tsx"],
  "tailwind": {
    "config": {
      "theme": {
        "extend": {}
      }
    }
  },
  "cssVars": {},
  "meta": {
    "importName": "SInput",
    "exportName": "default"
  },
  "props": {
    "value": {
      "type": "string",
      "required": false,
      "description": "The input value"
    },
    "placeholder": {
      "type": "string",
      "required": false,
      "description": "Placeholder text"
    },
    "type": {
      "type": "string",
      "enum": ["text", "email", "password", "number", "url", "tel"],
      "default": "text",
      "required": false,
      "description": "HTML input type"
    },
    "size": {
      "type": "string",
      "enum": ["small", "medium", "large"],
      "default": "medium",
      "required": false,
      "description": "Size of the input"
    },
    "variant": {
      "type": "string",
      "enum": ["default", "outlined", "filled"],
      "default": "default",
      "required": false,
      "description": "Visual variant of the input"
    },
    "disabled": {
      "type": "boolean",
      "default": false,
      "required": false,
      "description": "Whether the input is disabled"
    },
    "error": {
      "type": "boolean",
      "default": false,
      "required": false,
      "description": "Whether the input is in error state"
    },
    "helperText": {
      "type": "string",
      "required": false,
      "description": "Helper text displayed below the input"
    },
    "label": {
      "type": "string",
      "required": false,
      "description": "Label text for the input"
    },
    "required": {
      "type": "boolean",
      "default": false,
      "required": false,
      "description": "Whether the input is required"
    },
    "className": {
      "type": "string",
      "required": false,
      "description": "Additional CSS classes"
    },
    "onChange": {
      "type": "function",
      "required": false,
      "description": "Change handler function"
    },
    "onFocus": {
      "type": "function",
      "required": false,
      "description": "Focus handler function"
    },
    "onBlur": {
      "type": "function",
      "required": false,
      "description": "Blur handler function"
    }
  }
}
